<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".ItemDetailsAirpods">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backToGadgetShop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/arrow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Items"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="32sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- First LinearLayout with ImageViews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/airpods_max" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Airpods Max"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±34,990"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_star_rate_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="5.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_reviews_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=" Reviews"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"

                    android:text="Product Details"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="**AirPods Max**\n\nAirPods Max reimagine over-ear headphones with a perfect blend of high-fidelity audio and exceptional comfort. Designed by Apple, these headphones feature a dynamic driver that delivers immersive high-fidelity audio, ensuring every note is crisp and clear.\n\nFrom the canopy to the ear cushions, every detail of the AirPods Max has been meticulously crafted to provide an unparalleled fit and comfort. The breathable knit mesh canopy and memory foam ear cushions create a secure and comfortable seal, making them ideal for extended listening sessions.\n\nWith industry-leading Active Noise Cancellation, AirPods Max block out external noise, allowing you to fully immerse yourself in your music. When you need to stay aware of your surroundings, simply switch to Transparency mode to let outside sound in without removing your headphones.\n\nExperience theater-like sound with spatial audio and dynamic head tracking, which positions sound all around you to create a truly immersive listening experience.\n\n**Key Features:**\n- Apple-designed dynamic driver for high-fidelity audio\n- Exceptional fit with breathable knit mesh canopy and memory foam ear cushions\n- Industry-leading Active Noise Cancellation\n- Transparency mode to hear and interact with the world around you\n- Spatial audio with dynamic head tracking for a theater-like experience\n\n**What's Included:**\n- AirPods Max\n- Smart Case\n- Lightning to USB-C Cable\n- Documentation"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToWishlistAirpodsMax"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            app:strokeWidth="2dp"
            app:strokeColor="@color/orange"
            android:textSize="18sp"
            android:text="Add to Wishlist"/>
        <Button
            android:id="@+id/addToCartAirpodsMax"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/orange"
            android:textSize="18sp"
            android:text="Add to Cart"/>
    </LinearLayout>
</LinearLayout>