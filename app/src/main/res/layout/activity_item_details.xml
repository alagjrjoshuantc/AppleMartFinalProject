<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".ItemDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backToGadgetShop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/arrow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Items"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="32sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- First LinearLayout with ImageViews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/ipad_air5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="iPad Air (5th Gen)"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±39,790"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_star_rate_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="5.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_reviews_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=" Reviews"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Product Details"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="**iPad Air 5th Gen**\n\nThe iPad Air 5th
Gen combines power and portability in a sleek, lightweight design, making it
the perfect companion for both work and play. With its stunning 10.9-inch
Liquid Retina display, every image, video, and game comes to life with vivid
colors and crisp details.\n\nPowered by the lightning-fast A15 Bionic chip,
this iPad delivers blazing-fast performance and seamless multitasking,
whether you're editing 4K videos, playing graphics-intensive games, or
browsing the web. With up to 256GB of storage, you'll have plenty of space
to store all your apps, photos, and videos.\n\nFeaturing a 12MP rear camera
and a 7MP FaceTime HD camera, the iPad Air 5th Gen lets you capture stunning
photos and videos, as well as make crystal-clear video calls. And with
support for Apple Pencil (2nd generation) and Magic Keyboard, you can unlock
new ways to be creative and productive.\n\nWith Wi-Fi 6 and 5G capability,
you can stay connected wherever you go, while the all-day battery life
ensures that you can keep going from morning to night without needing to
recharge.\n\nExperience the power and versatility of the iPad Air 5th Gen
and take your productivity to new heights.\n\n**Key Features:**\n- 10.9-inch
Liquid Retina display\n- A15 Bionic chip with Neural Engine\n- Up to 256GB
of storage\n- 12MP rear camera and 7MP FaceTime HD camera\n- Support for
Apple Pencil (2nd generation) and Magic Keyboard\n- Wi-Fi 6 and 5G
capable\n- All-day battery life\n\n**What's Included:**\n- iPad Air 5th
Gen\n- USB-C Charge Cable\n- Documentation" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToWishlistIpadAir5thGen"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            app:strokeWidth="2dp"
            app:strokeColor="@color/orange"
            android:textSize="18sp"
            android:text="Add To Wishlist"/>
        <Button
            android:id="@+id/addToCartIpadAir5thGen"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/orange"
            android:textSize="18sp"
            android:text="Add to Cart"/>
    </LinearLayout>
</LinearLayout>